{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom"
        ],
        "declaration": false,
        "outDir": "bin",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
        ],
        "importHelpers": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/",
        "./src/**/*.test.ts",
        "dist",
    ],
}